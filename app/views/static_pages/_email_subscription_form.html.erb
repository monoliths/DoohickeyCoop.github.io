<%= form_tag(subscribe_path, method: "post", class: "form-group row") do %>
  <%= text_field_tag(:first_name, nil, 
      class: "form-control form-control-lg text-center", 
      placeholder: "First Name", 
      required: true,
      minlength: 2,
      maxlength: 30) %>
  <%= text_field_tag(:last_name, nil, 
      class: "form-control form-control-lg text-center", 
      placeholder: "Last Name", 
      required: true,
      minlength: 2,
      maxlength: 30) %>
  <%= text_field_tag(:email, nil, 
      class: "form-control form-control-lg text-center", 
      placeholder: "Email", 
      required: true,
      minlength: 2,
      maxlength: 75,
      type: "email") %>
  <%= submit_tag("Sign Up", class: "btn btn-block btn-primary") %>
<% end %>